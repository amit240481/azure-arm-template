{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "size",
        "type": "Microsoft.Common.DropDown",
        "label": "Deployment size",
        "defaultValue": "Starter",
        "constraints": {
          "allowedValues": [
            {
              "label": "Starter (1 master, 10 executors)",
              "value": "Starter"
            },
            {
              "label": "Medium (2 masters, 40 executors)",
              "value": "Medium"
            },
            {
              "label": "Large (5 masters, 100 executors)",
              "value": "Large"
            }
          ]
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "VM username",
        "toolTip": "Administrative username for the virtual machines.",
        "osPlatform": "Linux",
        "constraints": {
          "required": true,
          "regex": "^[a-z][-a-z0-9]*$"
        }
      },
      {
        "name": "adminCredentials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Linux"
      }
    ],
    "steps": [
      {
        "name": "size",
        "label": "Size",
        "subLabel": {
          "preValidation": "Choose virtual machine size",
          "postValidation": "Done"
        },
        "bladeTitle": "Size",
        "elements": [
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "VM size",
            "toolTip": "The size of virtual machines.",
            "recommendedSizes": [
              "Standard_A2",
              "Standard_A3",
              "Standard_A4"
            ],
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "cloudbees",
              "offer": "jenkins-enterprise",
              "sku": "jenkins-enterprise"
            }
          }
        ]
      },
      {
        "name": "deploymentDetails",
        "label": "Deployment Parameters",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "Deployment Parameters",
        "elements": [
          {
            "name": "publicIP",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP address",
              "domainNameLabel": "CloudBees Jenkins Operations Center domain name"
            },
            "toolTip": {
              "publicIpAddress": "",
              "domainNameLabel": ""
            },
            "constraints": {
              "required": {
                "domainNameLabel": true
              }
            },
            "options": {
              "hideNone": true,
              "hideDomainNameLabel": false,
              "hideExisting": false
            }
          },
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "toolTip": "Storage Account for the Virtual Machine's Disks",
            "defaultValue": {
              "type": "Standard_LRS"
            },
            "constraints": {
              "allowedTypes": [
                "Standard_LRS",
                "Standard_GRS"
              ],
              "required": true
            },
            "options": {
              "hideExisting": true
            }
          }
        ]
      }
    ],
    "outputs": {
      "storageAccountName": "[steps('deploymentDetails').storageAccount.name]",
      "storageAccountType": "[steps('deploymentDetails').storageAccount.type]",

      "publicIPNewOrExisting": "[steps('deploymentDetails').publicIP.newOrExistingOrNone]",
      "publicIPName" : "[steps('deploymentDetails').publicIP.name]",
      "dnsNameForPublicIP" : "[steps('deploymentDetails').publicIP.domainNameLabel]",

      "adminUsername": "[basics('adminUsername')]",
      "authenticationType": "[basics('adminCredentials').authenticationType]",
      "adminPassword": "[basics('adminCredentials').password]",
      "sshPublicKey": "[basics('adminCredentials').sshPublicKey]",

      "size": "[basics('size')]",
      "vmSize": "[steps('size').vmSize]",

      "location": "[location()]"
    }
  }
}
