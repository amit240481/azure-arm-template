{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "size",
        "type": "Microsoft.Common.DropDown",
        "label": "Deployment size",
        "defaultValue": "Starter",
        "constraints": {
          "allowedValues": [
            {
              "label": "Starter",
              "value": "Starter"
            },
            {
              "label": "Medium",
              "value": "Medium"
            },
            {
              "label": "Large",
              "value": "Large"
            }
          ]
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "VM username",
        "toolTip": "Administrative username for the virtual machines.",
        "osPlatform": "Linux",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "adminCredentials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Linux"
      }
    ],
    "steps": [
      {
        "name": "size",
        "label": "Size",
        "subLabel": {
          "preValidation": "Choose virtual machine size",
          "postValidation": "Done"
        },
        "bladeTitle": "Size",
        "elements": [
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "VM size",
            "toolTip": "The size of virtual machines.",
            "recommendedSizes": [
              "Standard_A2",
              "Standard_A3",
              "Standard_A4",
              "Standard_DS1",
              "Standard_DS2",
              "Standard_DS3"
            ],
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "cloudbees",
              "offer": "jenkins-enterprise",
              "sku": "jenkins-enterprise"
            }
          }
        ]
      },
      {
        "name": "deploymentDetails",
        "label": "Deployment Parameters",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "Deployment Parameters",
        "elements": [
          {
            "name": "dns",
            "type": "Microsoft.Common.TextBox",
            "label": "DNS name prefix",
            "toolTip": "Prefix for virtual machines DNS name.",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "toolTip": "Storage Account for the Virtual Machine's Disks",
            "defaultValue": {
              "type": "Standard_LRS"
            },
            "constraints": {
              "allowedTypes": [
                "Standard_LRS",
                "Standard_GRS",
                "Premium_LRS"
              ],
              "required": true
            }
          }
        ]
      }
    ],
    "outputs": {
      "storageAccountNewOrExisting": "[steps('deploymentDetails').storageAccount.newOrExisting]",
      "storageAccountName": "[steps('deploymentDetails').storageAccount.name]",
      "storageAccountType": "[steps('deploymentDetails').storageAccount.type]",

      "adminUsername": "[basics('adminUsername')]",
      "authenticationType": "[basics('adminCredentials').authenticationType]",
      "adminPassword": "[basics('adminCredentials').password]",
      "sshPublicKey": "[basics('adminCredentials').sshPublicKey]",

      "dns": "[steps('deploymentDetails').dns]",
      "size": "[basics('size')]",
      "vmSize": "[steps('size').vmSize]",

      "location": "[location()]"
    }
  }
}